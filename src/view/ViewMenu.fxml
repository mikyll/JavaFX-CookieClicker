<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="base" fx:id="base" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerMenu">
   <children>
      <VBox fx:id="vboxBase" alignment="CENTER" layoutX="150.0" layoutY="100.0" prefHeight="200.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Button disable="true" focusTraversable="false" mnemonicParsing="false" onAction="#showSettings" prefHeight="30.0" prefWidth="180.0" text="Settings">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#startGame" prefHeight="30.0" prefWidth="180.0" text="Start Clicking">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </VBox>
      <VBox fx:id="vboxSettings" alignment="CENTER" layoutX="150.0" layoutY="100.0" prefHeight="200.0" prefWidth="300.0" spacing="10.0" visible="false">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="150.0" text="Cookie:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboBoxCookie" prefHeight="30.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="150.0" text="Sound effects:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboBoxSound" prefHeight="30.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" disable="true" prefHeight="50.0" prefWidth="300.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="150.0" text="Volume:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Slider prefHeight="25.0" prefWidth="150.0" showTickLabels="true" value="50.0">
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                  </Slider>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="vboxBack" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" visible="false" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="50.0">
         <children>
            <Button id="back" mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="30.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
